<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_poem_detial"
    android:orientation="vertical" >

    <include layout="@layout/poems_top_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="vertical"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_poem_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:textStyle="bold|normal"
                android:textSize="15sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_poet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_poem_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:textSize="15sp"
                android:textStyle="bold|normal"
                android:text="@string/remark"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_remark_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" />

            <TextView
                android:id="@+id/tv_translation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:textSize="15sp"
                android:textStyle="bold|normal"
                android:text="@string/translation"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_translation_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" />

            <TextView
                android:id="@+id/tv_analysis"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:textSize="15sp"
                android:textStyle="bold|normal"
                android:text="@string/analysis"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_analysis_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>